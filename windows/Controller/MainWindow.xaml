<Window x:Class="Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="525" Loaded="Window_Loaded" Closed="Window_Closed">
    <StackPanel>
        <TextBox Name="currentState" Height="94" FontSize="36"></TextBox>
        <TextBox Name="prefix" FontSize="36"></TextBox>
        <ListBox Name="availableCommands" FontSize="24">
        </ListBox>
        <StackPanel Orientation="Horizontal">
            <Label Background="Green" Name="blocking_indicator" Height="100" Width="100" Margin="30 0">
                <TextBox Background="Transparent" FontWeight="Bold" FontSize="16" BorderBrush="Transparent">isBlocking</TextBox>
            </Label>
            <Label Background="Green" Name="walking_indicator" Height="100" Width="100" Margin="30 0">
                <TextBox Background="Transparent" FontWeight="Bold" FontSize="16" BorderBrush="Transparent">isWalking</TextBox>
            </Label>
            <Button Height="50" Width="75" Margin="30 0" Click="Button_Click">
                <TextBlock FontSize="16" Background="Transparent" FontWeight="Bold">Abort</TextBlock>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>

